mixin feeData(user)
    div.feeContainer(data-id=user._id)
        ul
            li
                a(href=`/user/${user._id}`) #{user.name}
            li
                span.currentFee=user.fee
            li
                input(type="submit", value="5000추가").plusFee
            li
                input(type="submit", value="5000감소").minusFee
            li
                span.currentPenalty=user.penalty
            li
                input(placeholder="0", name="increase", type="number").plusPenalty
            li
                input(placeholder="0", name="decrease", type="number").minusPenalty
            li
                input(placeholder="0", name="charge", type="number").submitPenalty
            li
                input(type="submit", value="적용").submitFee