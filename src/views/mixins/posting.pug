mixin posting(posting)
    ul
        li
            a(href=`/board/${posting._id}`)=posting.title
            span.text__Number__Review (0)
        li
            div
                if(posting.owner !== null)
                    span #{posting.owner.name}
                else
                    span 삭제된 계정
        li
            span=posting.createdAt
        li
            span=posting.meta.views