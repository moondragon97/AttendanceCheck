extends base.pug

block content
    if errorMessage 
        div=errorMessage
    form(method="POST")
        input(placeholder="Id", name="userId",type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(placeholder="ConfirmPassword", name="passwordConfirmation", type="password", required)
        input(placeholder="Name", type="text", name="name", required)
        input(placeholder="Email", type="email", name="email", required)
        input(type="submit", value="Join")