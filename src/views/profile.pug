extends base.pug

block content
    ul
        if loggedInUser.avatarUrl
            img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
        else
            li 대표 이미지 없음
        li 이름 : #{loggedInUser.name}
        li 이메일 : #{loggedInUser.email}
        if loggedInUser.attendance
            li 출석현황 : 완료
        else
            li 출석현황 : 미완료
    a(href=`/user/${loggedInUser._id}/edit-profile`) 정보 수정하기 &rarr;
    br
    if !loggedInUser.socialOnly
        a(href=`/user/${loggedInUser._id}/edit-password`) 패스워드 수정하기 &rarr;
        br
    a(href=`/user/${loggedInUser._id}/leave`) 회원탈퇴